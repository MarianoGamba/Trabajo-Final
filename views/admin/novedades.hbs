<div class="container" style="margin-top: 50px;">
    {{!-- fila 1 --}}
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{usuario}}</span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n <i
                        class="fas fa-sing-out-alt"></i></a>
            </p>
        </div>
    </div>
    {{!-- fin fila 1 --}}

    {{!-- fila 2 --}}

    <div class="row">
        <div class="col">
            <h3>Lista de novedades</h3>
        </div>
        <div class="col-2 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"> <i class="fas-fa-plus">Nuevo</i></a>
        </div>
    </div>



    <form action="/admin/novedades" class="form-inline col-3 d-flex" method="get">
        <input type="search" class="form-control mr-sm-2" placeholder="Search" aria-label="Search" name="q" {{#if q}}value="{{q}}"{{/if}}>
        <button class="btn btn-secundary" type="submit"><i class="fa fa-search"></i></button>
    </form>

    {{!-- fila 3 --}}
    <table class="table table-striped table-hover" style="padding:300px;">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">{{titulo}}</th>
                <th scope="col">imagen</th>
                <th scope="col" class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each novedades}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{titulo}}</td>
                <td>{{{imagen}}}</td>
                <td class="text-end">
                    <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-pencil"></i></a>
                    <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
            {{/each}}
            {{#if is_search}}
                {{#unless novedades.length}}
                No se encontraron resultados para "<strong>{{q}}</strong>"
                {{/unless}}
            {{/if}}
        </tbody>
    </table>

    {{!-- fin fila 2 --}}
</div>